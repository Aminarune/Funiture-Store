@model IEnumerable<FunitureManager.Models.User>

@{ ViewBag.Title = "Index"; }
<div style="margin: 0.5% 2%;">
    <h2>User List</h2>
    <div style="display:flex;">
        <p>
            <button style="background-color: #0A2558; border-radius: 5px; padding: 5px; border-right-width: 1px; border-top-width: 1px; border-left-width: 1px; border-bottom-width: 1px;">
                @Html.ActionLink("Create New", "Create", null, new { style = "color: white" })
            </button>
        </p>
        @using (Html.BeginForm())
        {
<p>
    <input id="SearchString" name="SearchString" type="text" value="" placeholder="Search your product" style="
    padding-left: 5px;
    padding-bottom: 5px;
    padding-top: 5px;
    padding-right: 5px;
    margin-left: 10px;
">
    <input type="submit" value="Search" style="
    padding-top: 5px;
    padding-left: 5px;
    padding-bottom: 5px;
    padding-right: 5px;
">
</p>}
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("User Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.CateSortParm })
            </th>
            <th>
                @Html.ActionLink("Phonenumber", "Index", new { sortOrder = ViewBag.PriceSortParm })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phonenumber)
    </td>
    <td>

        @Html.ActionLink("Details", "Details", new { id = item.Id })

    </td>
</tr>
}
    </table>
</div>